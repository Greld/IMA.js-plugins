{
	"bail": true,
	"verbose": true,
	"coverageThreshold": {
		"global": {
			"functions": 15,
			"lines": 20,
			"statements": 30
		}
	},
	"modulePaths": [
		"<rootDir>/"
	],
	"transform": {
		"\\.jsx?": "<rootDir>/../../preprocess.js"
	},
	"testPathIgnorePatterns": ["__snapshots__", "/node_modules/"],
	"testRegex": "(/src(/?[^/]*){0,5}/__tests__/).*Spec\\.jsx?$"
}
